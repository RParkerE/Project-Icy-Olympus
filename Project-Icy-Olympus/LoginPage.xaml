<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Icy_Olympus.LoginPage"
             Title="LoginPage">
    <StackLayout VerticalOptions="Center" Margin="20">
        <Label Text="Log In" HorizontalOptions="Center" TextColor="SkyBlue" FontSize="35" Margin="0, 20" />
        <Entry Placeholder="Email" Keyboard="Email" x:Name="EmailInput" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordInput" />
        <Button Text="Login" Clicked="LoginClicked" Margin="60, 40" BackgroundColor="SkyBlue" TextColor="White" />
        <Button Text="New User? Sign Up" Clicked="SignUpClicked" Margin="60, 40" BackgroundColor="SkyBlue" TextColor="White" />
    </StackLayout>
</ContentPage>