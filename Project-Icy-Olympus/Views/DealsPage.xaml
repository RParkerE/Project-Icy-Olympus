            <CollectionView 
                        ItemsSource="{Binding Venues}"
                        SelectionMode="None"
                        Grid.ColumnSpan="2">
                <CollectionView.EmptyView>
                    <Label Text="No Data To Show Currently" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Venue">
                        <Grid Padding="10">
                            <Frame HeightRequest="500" Style="{StaticResource CardView}">
                                <Grid Padding="0" ColumnDefinitions="125,*">
                                    <Image Aspect="AspectFill" Source="{Binding images[0]}"
                                    HeightRequest="125"
                                    WidthRequest="125" />
                                    <StackLayout
                                    Grid.Column="1"
                                    Padding="10"
                                    VerticalOptions="Center">
                                        <Label Style="{StaticResource LargeLabel}" Text="{Binding name}" />
                                        <Label Style="{StaticResource SmallLabel}" Text="{Binding address}" />
                                        <Label Style="{StaticResource SmallLabel}" Text="{Binding deals.events.food_deals[0]}" />
                                        <Label Style="{StaticResource SmallLabel}" Text="{Binding deals.events.drink_deals[0]}" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
